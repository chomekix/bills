<!DOCTYPE html>
<html>
  <head>
    <title>Bills</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application' %>
    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%#= javascript_pack_tag 'hello_react', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container-fluid">
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <%= link_to "Bills", root_path, class: "navbar-brand" %>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item <%= 'active' if current_page?(invoices_path) || current_page?(root_path) %>">
              <%= link_to "請求書一覧", invoices_path, class: "nav-link" %>
            </li>
            <li class="nav-item <%= 'active' if current_page?(senders_path) %>">
              <%= link_to "請求者一覧", senders_path, class: "nav-link" %>
            </li>
            <li class="nav-item <%= 'active' if current_page?(banks_path) %>">
              <%= link_to "振込先銀行一覧", banks_path, class: "nav-link" %>
            </li>
          </ul>
          <ul class="navbar-nav">
            <li class="nav-item">
            <% if signed_in? %>
              <div class="nav-link">
                <%= current_user.email %>
                |
                <%= link_to "Sign out", session_path, method: :delete %>
              </div>
            <% else %>
              <div class="nav-link">
                <%= current_user.name %>
                |
                <%= link_to "Sign in", new_session_path %>
                |
                <%= link_to "Sign up", new_user_path %>
              </div>
            <% end %>
            </li>
          </ul>
        </div>
      </nav>
      <%= yield %>
    </div>
  </body>
</html>
