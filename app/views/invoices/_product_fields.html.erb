<div class="row jsProductRow">
  <div class="col-7 product_column_left">
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="col-5">
    <div class="row">
      <div class="col-2 product_column">
        <%= f.number_field :number, class: "form-control" %>
      </div>
      <div class="col-2 product_column">
        <%= f.text_field :unit, class: "form-control" %>
      </div>
      <div class="col-3 product_column">
        <%= f.number_field :unit_price, class: "form-control" %>
      </div>
      <div class="col-3 product_column">
        <%= f.number_field :amount, class: "form-control", readonly: true %>
      </div>
      <div class="col-2 product_column_right">
        <%= f.hidden_field :_destroy %>
        <%= link_to_remove_fields '削除', '.jsProductRow', class: "product_delete" %>
      </div>
    </div>
  </div>
</div>