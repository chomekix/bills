<p id="notice"><%= notice %></p>

<h1>請求書</h1>

<table class="table table-hover table-striped">
  <thead class="thead-inverse">
    <tr>
      <th>請求書番号</th>
      <th>宛先</th>
      <th>名称</th>
      <th>合計額</th>
      <th>請求日</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @invoices.each do |invoice| %>
      <tr>
        <td><%= invoice.serial_number %></td>
        <td><%= invoice.recipient %></td>
        <td><%= invoice.title %></td>
        <td><%= invoice.total_amount %></td>
        <td><%= invoice.billing_date %></td>
        <td><%= link_to '表示', invoice %></td>
        <td><%= link_to '編集', edit_invoice_path(invoice) %></td>
        <td><%= link_to '削除', invoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to '新しい請求書を作成する', new_invoice_path, class: "btn btn-outline-primary" %>
